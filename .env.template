# SelfLayer Environment Variables Template
# Copy this file to .env and fill in your values

# Google Gemini API Key (required)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_api_key_here

# Optional: Logging configuration
SELFLAYER_LOG_LEVEL=INFO

# Optional: Request timeouts (seconds)
SELFLAYER_REQUEST_TIMEOUT=30
SELFLAYER_AI_TIMEOUT=30

# Optional: Search and analysis limits
SELFLAYER_MAX_SEARCH_RESULTS=10
SELFLAYER_MAX_CONTENT_LENGTH=15000
